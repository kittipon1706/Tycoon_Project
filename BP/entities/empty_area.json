{
	"format_version": "1.13.0",
	"minecraft:entity": {
		"description": {
			"identifier": "bridge:empty_area",
			"is_spawnable": true,
			"is_summonable": true,
			"is_experimental": false,
			"runtime_identifier": "minecraft:armor_stand"
		},
		"component_groups": {
			"bridge:onclick": {
				"minecraft:timer": {
					"looping": false,
					"time": 1,
					"time_down_event": {
						"event": "bridge:despawn"
					}
				}
			},
			"bridge:set_despawn": {
				"minecraft:instant_despawn": {}
			}
		},
		"components": {
			"minecraft:type_family": {
				"family": [
					"mob",
					"empty_area"
				]
			},
			"minecraft:damage_sensor": {
				"triggers": {
					"cause": "all",
					"deals_damage": false
				}
			},
			"minecraft:health": {
				"value": 20,
				"max": 20
			},
			"minecraft:collision_box": {
				"width": 2,
				"height": 2
			},
			"minecraft:interact": {
				"interactions": {
					"on_interact": {
						"filters": {
							"test": "is_family",
							"subject": "other",
							"value": "player"
						},
						"event": "bridge:set_click",
						"target": "self"
					}
				}
			}
		},
		"events": {
			"bridge:set_click": {
				"sequence": [
					{
						"run_command": {
							"command": "/function stage0/on_clear_stage0"
						}
					},
					{
						"add": {
							"component_groups": [
								"bridge:onclick"
							]
						}
					}
				]
			},
			"bridge:despawn": {
				"add": {
					"component_groups": [
						"bridge:set_despawn"
					]
				}
			}
		}
	}
}