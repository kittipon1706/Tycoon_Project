{
	"format_version": "1.13.0",
	"minecraft:entity": {
		"description": {
			"identifier": "bridge:waypoint_midnight_racing",
			"is_spawnable": true,
			"is_summonable": true,
			"is_experimental": false,
			"runtime_identifier": "bridge:waypoint_midnight_racing",
			"animations": {
				"waypoint": "controller.animation.waypoint_midnight_racing"
			},
			"scripts": {
				"animate": [
					"waypoint"
				]
			}
		},
		"component_groups": {
			"bridge:set_despawn": {
				"minecraft:instant_despawn": {}
			},
			"bridge:remove_waypoint": {
				"minecraft:variant": {
					"value": 4
				},
				"minecraft:type_family": {
					"family": [
						"mob",
						"waypoint_midnight_racing",
						"waypoint_midnight_racing_false"
					]
				},
				"minecraft:instant_despawn": {}
			},
			"bridge:remove_waypoint_last": {
				"minecraft:type_family": {
					"family": [
						"mob",
						"waypoint_midnight_racing",
						"waypoint_midnight_racing_false"
					]
				},
				"minecraft:variant": {
					"value": 2
				},
				"minecraft:timer": {
					"looping": false,
					"time": 2,
					"time_down_event": {
						"event": "bridge:set_last"
					}
				}
			},
			"bridge:remove_waypoint_first": {
				"minecraft:type_family": {
					"family": [
						"mob",
						"waypoint_midnight_racing",
						"waypoint_midnight_racing_false"
					]
				},
				"minecraft:variant": {
					"value": 4
				},
				"minecraft:timer": {
					"looping": false,
					"time": 2,
					"time_down_event": {
						"event": "bridge:set_first"
					}
				}
			},
			"bridge:add_waypoint": {
				"minecraft:type_family": {
					"family": [
						"waypoint_midnight_racing",
						"waypoint_midnight_racing_true",
						"mob"
					]
				}
			},
			"bridge:is_first": {
				// add waypoint to the last waypoint
				"minecraft:variant": {
					"value": 3
				}
			},
			"bridge:is_last": {
				// add waypoint to all waypoint except self
				"minecraft:variant": {
					"value": 1
				}
			}
		},
		"components": {
			"minecraft:variant": {
				"value": 0
			},
			"minecraft:entity_sensor": {
				"relative_range": false,
				"minimum_count": 1,
				"maximum_count": 1,
				"sensor_range": 2,
				"event_filters": {
					"test": "is_family",
					"subject": "other",
					"value": "MN_enemy_car"
				},
				"event": "bridge:on_detect_car"
			},
			"minecraft:type_family": {
				"family": [
					"waypoint_midnight_racing",
					"waypoint_midnight_racing_true",
					"mob"
				]
			},
			"minecraft:damage_sensor": {
				"triggers": {
					"cause": "all",
					"deals_damage": false
				}
			},
			"minecraft:health": {
				"value": 20,
				"max": 20
			},
			"minecraft:collision_box": {
				"width": 1,
				"height": 1
			},
			"minecraft:pushable": {
				"is_pushable": false,
				"is_pushable_by_piston": false
			},
			"minecraft:physics": {},
			"minecraft:conditional_bandwidth_optimization": {}
		},
		"events": {
			"bridge:despawn": {
				"add": {
					"component_groups": [
						"bridge:set_despawn"
					]
				}
			},
			"bridge:on_detect_car": {
				"sequence": [
					{
						"filters": {
							"test": "is_variant",
							"operator": "=",
							"value": 0
						},
						"add": {
							"component_groups": [
								"bridge:remove_waypoint"
							]
						}
					},
					{
						"filters": {
							"test": "is_variant",
							"operator": "=",
							"value": 1
						},
						"add": {
							"component_groups": [
								"bridge:remove_waypoint_last"
							]
						}
					},
					{
						"filters": {
							"test": "is_variant",
							"operator": "=",
							"value": 3
						},
						"add": {
							"component_groups": [
								"bridge:remove_waypoint_first"
							]
						}
					}
				]
			},
			"bridge:reset": {
				"add": {
					"component_groups": [
						"bridge:add_waypoint"
					]
				}
			},
			"bridge:set_last": {
				"add": {
					"component_groups": [
						"bridge:is_last"
					]
				}
			},
			"bridge:set_first": {
				"add": {
					"component_groups": [
						"bridge:is_first"
					]
				}
			}
		}
	}
}