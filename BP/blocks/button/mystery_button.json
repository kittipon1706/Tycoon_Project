						"*": {
							"texture": "bridge_click_btn_active",
							"render_method": "blend"
						}
					}
				}
			},
			{
				"condition": "query.block_property('stgab:facing_direction') == 0",
				"components": {
					"minecraft:rotation": [
						0,
						180,
						0
					]
				}
			},
			{
				"condition": "query.block_property('stgab:facing_direction') == 1",
				"components": {
					"minecraft:rotation": [
						0,
						0,
						0
