{
	"format_version": "1.13.0",
	"minecraft:entity": {
		"description": {
			"identifier": "bridge:normal_customer",
			"is_spawnable": true,
			"is_summonable": true,
			"is_experimental": false,
			"runtime_identifier": "minecraft:villager",
			"animations": {
				"normal_customer": "controller.animation.normal_customer"
			},
			"scripts": {
				"animate": [
					"normal_customer"
				]
			}
		},
		"component_groups": {
			"bridge:on_paid": {
				"minecraft:variant": {
					"value": 3
				},
				"minecraft:behavior.nearest_attackable_target": {
					"must_see": false,
					"priority": 3,
					"reselect_targets": false,
					"entity_types": [
						{
							"filters": {
								"test": "is_family",
								"subject": "other",
								"value": "car"
							},
							"max_dist": 100
						}
					],
					"within_radius": 100
				},
				"minecraft:behavior.move_towards_target": {
					"priority": 2,
					"speed_multiplier": 0.1,
					"within_radius": 200
				},
				"minecraft:attack": {
					"damage": 0
				},
				"minecraft:behavior.melee_attack": {
					"priority": 1,
					"attack_once": true,
					"random_stop_interval": 100,
					"on_attack": {
						"event": "bridge:leav_store",
						"target": "self"
					}
				}
			},
			"bridge:on_waiting": {
				"minecraft:variant": {
					"value": 1
				},
				"minecraft:behavior.random_stroll": {
					"priority": 1,
					"speed_multiplier": 0.5
				},
				"minecraft:timer": {
					"looping": true,
					"random_interval": true,
					"time": 1,
					"time_down_event": {
						"filters": {
							"test": "has_tag",
							"subject": "self",
							"value": "queue"
						},
						"event": "bridge:buying",
						"target": "self"
					}
				}
			},
			"bridge:move_into": {
				"minecraft:behavior.nearest_attackable_target": {
					"must_see": false,
					"priority": 3,
					"reselect_targets": true,
					"entity_types": [
						{
							"filters": {
								"test": "is_family",
								"subject": "other",
								"value": "salesman"
							},
							"max_dist": 100
						}
					],
					"within_radius": 100
				},
				"minecraft:behavior.move_towards_target": {
					"priority": 2,
					"speed_multiplier": 0.6,
					"within_radius": 200
				},
				"minecraft:follow_range": {
					"value": 300
				},
				"minecraft:attack": {
					"damage": 0
				},
				"minecraft:behavior.delayed_attack": {
					"priority": 1,
					"track_target": true,
					"attack_duration": 1,
					"reach_multiplier": 2,
					"attack_once": true
				},
				"minecraft:target_nearby_sensor": {
					"inside_range": 3.0,
					"outside_range": 5.0,
					"must_see": true,
					"on_inside_range": {
						"event": "bridge:trigger_waiting",
						"target": "self"
					}
				},
				"minecraft:behavior.open_door": {
					"priority": 6,
					"close_door_after": true
				}
			},
			"bridge:on_buying": {
				"minecraft:variant": {
					"value": 2
				},
				"minecraft:timer": {
					"random_interval": true,
					"time": 5,
					"time_down_event": {
						"event": "bridge:paid_money"
					}
				}
			},
			"bridge:on_leaving": {
				"minecraft:instant_despawn": {}
			}
		},
		"components": {
			"minecraft:npc": {},
			"minecraft:type_family": {
				"family": [
					"customer",
					"mob"
				]
			},
			"minecraft:damage_sensor": {
				"triggers": {
					"cause": "all",
					"deals_damage": false
				}
			},
			"minecraft:health": {
				"value": 20,
				"max": 20
			},
			"minecraft:collision_box": {
				"width": 0.6,
				"height": 1.9
			},
			"minecraft:movement": {
				"value": 0.5
			},
			"minecraft:navigation.walk": {
				"can_path_over_water": true,
				"can_pass_doors": true,
				"can_open_doors": true,
				"avoid_water": true
			},
			"minecraft:movement.basic": {},
			"minecraft:behavior.float": {
				"priority": 0
			},
			"minecraft:behavior.look_at_player": {
				"priority": 9,
				"look_distance": 8,
				"probability": 0.02
			},
			"minecraft:behavior.random_look_around": {
				"priority": 8
			},
			"minecraft:preferred_path": {
				"default_block_cost": 0,
				"jump_cost": 2,
				"max_fall_blocks": 1,
				"preferred_path_blocks": [
					{
						"cost": 50,
						"blocks": [
							"quartz_block"
						]
					}
				]
			},
			"minecraft:physics": {},
			"minecraft:pushable": {
				"is_pushable": true,
				"is_pushable_by_piston": true
			},
			"minecraft:conditional_bandwidth_optimization": {}
		},
		"events": {
			"minecraft:entity_spawned": {
				"add": {
					"component_groups": [
						"bridge:move_into"
					]
				}
			},
			"bridge:trigger_waiting": {
				"add": {
					"component_groups": [
						"bridge:on_waiting"
					]
				},
				"remove": {
					"component_groups": [
						"bridge:move_into"
					]
				}
			},
			"bridge:buying": {
				"add": {
					"component_groups": [
						"bridge:on_buying"
					]
				},
				"remove": {
					"component_groups": [
						"bridge:on_waiting"
					]
				}
			},
			"bridge:paid_money": {
				"add": {
					"component_groups": [
						"bridge:on_paid"
					]
				},
				"remove": {
					"component_groups": [
						"bridge:on_buying"
					]
				}
			},
			"bridge:leav_store": {
				"add": {
					"component_groups": [
						"bridge:on_leaving"
					]
				},
				"remove": {
					"component_groups": [
						"bridge:on_paid"
					]
				}
			}
		}
	}
}