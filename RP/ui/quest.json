{
    "namespace": "all_quest",
    "quest_panel": {
        "type": "panel",
        "anchor_from": "top_right",
        "anchor_to": "top_right",
        "size": [
            "100%c",
            "100%c"
        ],
        "layer": 10,
        "offset": [
            -5,
            5
        ],
        "controls": [
            {
                "main_stack_panel": {
                    "type": "stack_panel",
                    "size": [
                        "100%c",
                        "100%c"
                    ],
                    "use_child_anchors": true,
                    "controls": [
                        {
                            "main_topic": {
                                "type": "label",
                                "text": "§lMAIN QUEST",
                                "anchor_from": "top_right",
                                "anchor_to": "top_right",
                                "color": "green"
                            }
                        },
                        {
                            "stage1_main_1@all_quest.stage1_main_1": {}
                        },
                        {
                            "stage1_main_2@all_quest.stage1_main_2": {}
                        },
                        {
                            "stage1_main_3@all_quest.stage1_main_3": {}
                        },
                        {
                            "key_topic": {
                                "type": "label",
                                "text": "§lKEY QUEST",
                                "anchor_from": "top_right",
                                "anchor_to": "top_right",
                                "color": "yellow"
                            }
                        },
                        {
                            "stage1_key@all_quest.stage1_key": {}
                        }
                    ]
                }
            }
        ]
    },
    "stage1_main_1": {
        "type": "label",
        "text": "- setting up the dealership",
        "anchor_from": "top_right",
        "anchor_to": "top_right",
        "color": "white",
        "locked_color": "green",
        "bindings": [
            {
                "binding_name": "#hud_title_text_string",
                "binding_name_override": "#text",
                "binding_type": "global"
            },
            {
                "binding_type": "view",
                "source_property_name": "(not((#text - @@stage1_quest) = #text))",
                "target_property_name": "#visible"
            },
            {
                "binding_type": "view",
                "source_property_name": "((#text - @@1) = #text)",
                "target_property_name": "#enabled"
            }
        ]
    },
    "stage1_main_2": {
        "type": "label",
        "text": "- hiring the first salesman",
        "anchor_from": "top_right",
        "anchor_to": "top_right",
        "color": "white",
        "locked_color": "green",
        "bindings": [
            {
                "binding_name": "#hud_title_text_string",
                "binding_name_override": "#text",
                "binding_type": "global"
            },
            {
                "binding_type": "view",
                "source_property_name": "(not((#text - @@stage1_quest) = #text))",
                "target_property_name": "#visible"
            },
            {
                "binding_type": "view",
                "source_property_name": "((#text - @@2) = #text)",
                "target_property_name": "#enabled"
            }
        ]
    },
    "stage1_main_3": {
        "type": "label",
        "text": "- buying the first car",
        "anchor_from": "top_right",
        "anchor_to": "top_right",
        "color": "white",
        "locked_color": "green",
        "bindings": [
            {
                "binding_name": "#hud_title_text_string",
                "binding_name_override": "#text",
                "binding_type": "global"
            },
            {
                "binding_type": "view",
                "source_property_name": "(not((#text - @@stage1_quest) = #text))",
                "target_property_name": "#visible"
            },
            {
                "binding_type": "view",
                "source_property_name": "((#text - @@3) = #text)",
                "target_property_name": "#enabled"
            }
        ]
    },
    "stage1_key": {
        "type": "label",
        "text": "The Right Price",
        "anchor_from": "top_right",
        "anchor_to": "top_right",
        "color": "white",
        "locked_color": "yellow",
        "bindings": [
            {
                "binding_name": "#hud_title_text_string",
